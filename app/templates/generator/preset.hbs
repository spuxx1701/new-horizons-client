{{page-title (t 'generator.preset.title')}}

<Portal @target='sidebar-left'>
  <Application::Sidebar::Left::Generator />
</Portal>

<Common::Container @size='small' @align='center'>
  <Common::Control::Toggle
    @label={{t 'generator.preset.show-tutorials'}}
    @state={{this.localStorage.tutorialsEnabled}}
    @onChange={{this.toggleTutorials}}
  />
  <Common::Misc::TutorialBox @title={{t 'generator.preset.tutorial-01.title'}}>
    {{t 'generator.preset.tutorial-01.text'}}
  </Common::Misc::TutorialBox>
  <Common::Control::Dropdown
    @options={{this.presetOptions}}
    @onSelect={{this.handlePresetSelect}}
    @label={{t 'generator.preset.character-preset.title'}}
    @size='medium'
    @infoTitle={{t 'tooltip.preset.character-preset.title'}}
    @infoText={{t 'tooltip.preset.character-preset.text'}}
  />
  <Common::Control::Toggle
    @label={{t 'generator.preset.customize.title'}}
    @state={{this.customize}}
    @onChange={{this.toggleCustomize}}
    @infoTitle={{t 'tooltip.preset.customize.title'}}
    @infoText={{t 'tooltip.preset.customize.text'}}
  />
  <Common::Misc::TutorialBox @title={{t 'generator.preset.tutorial-02.title'}}>
    {{t 'generator.preset.tutorial-02.text' htmlSafe=true}}
  </Common::Misc::TutorialBox>

  <Common::Control::Input
    @type='number'
    @label={{t 'generator.preset.attribute-points'}}
    @changeset={{this.characterPresetChangeset}}
    @key='attributePoints'
    @placeholder={{t 'generator.preset.attribute-points'}}
    @size='small'
    @min={{0}}
    @max={{100}}
    @required={{true}}
    @disabled={{this.inputsDisabled}}
    @infoTitle={{t 'tooltip.attribute-points.title'}}
    @infoText={{t 'tooltip.attribute-points.text'}}
  />

  <Common::Control::Input
    @type='number'
    @label={{t 'generator.preset.trait-points'}}
    @changeset={{this.characterPresetChangeset}}
    @key='traitPoints'
    @placeholder={{t 'generator.preset.trait-points'}}
    @size='x-small'
    @min={{-50}}
    @max={{50}}
    @required={{true}}
    @disabled={{this.inputsDisabled}}
    @infoTitle={{t 'tooltip.trait-points.title'}}
    @infoText={{t 'tooltip.trait-points.text'}}
  />

  <Common::Control::Input
    @type='number'
    @label={{t 'generator.preset.traits-minimum.title'}}
    @changeset={{this.characterPresetChangeset}}
    @key='traitsMinimum'
    @size='x-small'
    @min={{0}}
    @max={{this.characterPreset.traitsMaximum}}
    @required={{true}}
    @disabled={{this.inputsDisabled}}
    @infoTitle={{t 'generator.preset.traits-minimum.title'}}
    @infoText={{t 'generator.preset.traits-minimum.text'}}
  />

  <Common::Control::Input
    @type='number'
    @label={{t 'generator.preset.traits-maximum.title'}}
    @changeset={{this.characterPresetChangeset}}
    @key='traitsMaximum'
    @size='x-small'
    @min={{this.characterPreset.traitsMinimum}}
    @max={{25}}
    @required={{true}}
    @disabled={{this.inputsDisabled}}
    @infoTitle={{t 'generator.preset.traits-maximum.title'}}
    @infoText={{t 'generator.preset.traits-maximum.text'}}
  />

  <Common::Control::Input
    @type='number'
    @label={{t 'generator.preset.abilities-maximum.title'}}
    @changeset={{this.characterPresetChangeset}}
    @key='abilitiesMax'
    @size='x-small'
    @min={{0}}
    @max={{25}}
    @required={{true}}
    @disabled={{this.inputsDisabled}}
    @infoTitle={{t 'generator.preset.abilities-maximum.title'}}
    @infoText={{t 'generator.preset.abilities-maximum.text'}}
  />

  <Common::Control::Button
    @text={{translate 'generator.preset.submit'}}
    @icon='play'
    @placeholder='Hello'
    @onClick={{this.submit}}
  />
</Common::Container>