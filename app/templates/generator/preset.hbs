{{page-title (t 'generator.preset.title')}}

<Portal @target='sidebar-left'>
  <Application::Sidebar::Left::Generator />
</Portal>

<Common::Container
  @size='small'
  @align='center'
  @title={{t 'generator.preset.title'}}
>
  <Common::Control::Toggle
    @state={{this.localStorage.tutorialsEnabled}}
    @onChange={{this.toggleTutorials}}
    @label={{t 'generator.preset.show-tutorials.title'}}
    @infoTitle={{t 'generator.preset.show-tutorials.title'}}
    @infoText={{t 'generator.preset.show-tutorials.text'}}
  />

  <Common::Misc::TutorialBox @title={{t 'generator.preset.tutorial-01.title'}}>
    {{t 'generator.preset.tutorial-01.text' htmlSafe=true}}
  </Common::Misc::TutorialBox>

  <Common::Control::Dropdown
    @options={{this.presetOptions}}
    @onSelect={{this.handlePresetSelect}}
    @size='medium'
    @label={{t 'generator.preset.character-preset.title'}}
    @infoTitle={{t 'generator.preset.character-preset.title'}}
    @infoText={{t 'generator.preset.character-preset.text'}}
  />

  <Common::Control::Toggle
    @label={{t 'generator.preset.customize.title'}}
    @state={{this.customize}}
    @onChange={{this.toggleCustomize}}
    @infoTitle={{t 'generator.preset.customize.title'}}
    @infoText={{t 'generator.preset.customize.text'}}
  />

  {{#if this.customize}}
    <Common::Control::Input
      @type='number'
      @label={{t 'generator.preset.attribute-points'}}
      @changeset={{this.characterPresetChangeset}}
      @key='attributePoints'
      @placeholder={{t 'generator.preset.attribute-points'}}
      @size='small'
      @min={{0}}
      @max={{100}}
      @required={{true}}
      @infoTitle={{t 'tooltip.attribute-points.title'}}
      @infoText={{t 'tooltip.attribute-points.text'}}
    />

    <Common::Control::Input
      @type='number'
      @label={{t 'generator.preset.trait-points'}}
      @changeset={{this.characterPresetChangeset}}
      @key='traitPoints'
      @placeholder={{t 'generator.preset.trait-points'}}
      @size='x-small'
      @min={{-50}}
      @max={{50}}
      @required={{true}}
      @infoTitle={{t 'tooltip.trait-points.title'}}
      @infoText={{t 'tooltip.trait-points.text'}}
    />

    <Common::Control::Input
      @type='number'
      @label={{t 'generator.preset.interest-points'}}
      @changeset={{this.characterPresetChangeset}}
      @key='interestPoints'
      @size='x-small'
      @min={{0}}
      @max={{1000}}
      @required={{true}}
      @infoTitle={{t 'tooltip.interest-points.title'}}
      @infoText={{t 'tooltip.interest-points.text'}}
    />

    <Common::Control::Input
      @type='number'
      @label={{t 'generator.preset.traits-minimum.title'}}
      @changeset={{this.characterPresetChangeset}}
      @key='traitsMinimum'
      @size='x-small'
      @min={{0}}
      @max={{this.characterPreset.traitsMaximum}}
      @required={{true}}
      @infoTitle={{t 'generator.preset.traits-minimum.title'}}
      @infoText={{t 'generator.preset.traits-minimum.text'}}
    />

    <Common::Control::Input
      @type='number'
      @label={{t 'generator.preset.traits-maximum.title'}}
      @changeset={{this.characterPresetChangeset}}
      @key='traitsMaximum'
      @size='x-small'
      @min={{this.characterPreset.traitsMinimum}}
      @max={{25}}
      @required={{true}}
      @infoTitle={{t 'generator.preset.traits-maximum.title'}}
      @infoText={{t 'generator.preset.traits-maximum.text'}}
    />

    <Common::Control::Input
      @type='number'
      @label={{t 'generator.preset.abilities-maximum.title'}}
      @changeset={{this.characterPresetChangeset}}
      @key='abilitiesMaximum'
      @size='x-small'
      @min={{0}}
      @max={{25}}
      @required={{true}}
      @infoTitle={{t 'generator.preset.abilities-maximum.title'}}
      @infoText={{t 'generator.preset.abilities-maximum.text'}}
    />

    <Common::Control::Input
      @type='number'
      @label={{t 'generator.preset.bonus-credits.title'}}
      @changeset={{this.characterPresetChangeset}}
      @key='bonusCredits'
      @size='small'
      @min={{0}}
      @max={{25}}
      @required={{true}}
      @infoTitle={{t 'generator.preset.bonus-credits.title'}}
      @infoText={{t 'generator.preset.bonus-credits.text'}}
    />

    <Common::Control::Input
      @type='number'
      @label={{t 'generator.preset.start-experience.title'}}
      @changeset={{this.characterPresetChangeset}}
      @key='startExperience'
      @size='small'
      @min={{0}}
      @max={{99999}}
      @required={{true}}
      @infoTitle={{t 'generator.preset.start-experience.title'}}
      @infoText={{t 'generator.preset.start-experience.text'}}
    />

    <Common::Control::Input
      @type='number'
      @label={{t 'generator.preset.start-faith-points.title'}}
      @changeset={{this.characterPresetChangeset}}
      @key='startFaithPoints'
      @size='x-small'
      @min={{0}}
      @max={{5}}
      @required={{true}}
      @infoTitle={{t 'generator.preset.start-faith-points.title'}}
      @infoText={{t 'generator.preset.start-faith-points.text'}}
    />
  {{/if}}

  <Common::Control::Button
    @text={{translate 'generator.preset.submit'}}
    @icon='play'
    @placeholder='Hello'
    @onClick={{this.submit}}
  />
</Common::Container>