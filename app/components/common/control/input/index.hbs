<label class='input-outer-container' for='{{this.componentId}}-input'>
  <p class='input-label'>{{@label}}
    {{#if (and @infoTitle @infoText)}}
      <Features::Tooltip::Button
        @title={{@infoTitle}}
        @text={{@infoText}}
        @article={{@infoArticle}}
      />
    {{/if}}
  </p>
  <div class='input-inner-container'>
    {{#if @required}}
      <FaIcon
        class='input-required-marker'
        @icon='star-of-life'
        @title={{t 'misc.required-field'}}
      />
    {{/if}}
    <input
      id='{{this.componentId}}-input'
      type={{this.type}}
      class='input-field hide-invalidity control-{{this.size}}
        text-{{this.align}}'
      value={{this.value}}
      placeholder={{@placeholder}}
      disabled={{@disabled}}
      required={{@required}}
      pattern={{@pattern}}
      min={{@min}}
      max={{@max}}
      minLength={{@minLength}}
      maxLength={{@maxLength}}
      autocomplete={{@autocomplete}}
      autocapitalize={{@autocapitalize}}
      {{on 'input' this.handleInput}}
      {{on 'change' this.handleChange}}
    />
  </div>
</label>